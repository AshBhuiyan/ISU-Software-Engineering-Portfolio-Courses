<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="#1A2535"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#2A3A4A">

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Hidden icon - we use emojis in names instead -->
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:contentDescription="Store item icon" />

        <LinearLayout
            android:id="@+id/texts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <!-- Item name with emoji included -->
            <TextView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item name"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Description -->
            <TextView
                android:id="@+id/itemDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short description"
                android:textSize="13sp"
                android:textColor="#A0B0C0"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Price - bright and visible -->
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textStyle="bold"
            android:textColor="#00FF88"
            android:textSize="18sp"
            android:layout_marginEnd="12dp"/>

        <!-- Buy button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyBtn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:minWidth="70dp"
            android:text="BUY"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:singleLine="true"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:backgroundTint="#00C8FF"
            app:cornerRadius="22dp"
            app:elevation="4dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
