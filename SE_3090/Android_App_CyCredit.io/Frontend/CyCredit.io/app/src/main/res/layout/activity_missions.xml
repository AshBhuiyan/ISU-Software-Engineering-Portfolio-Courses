<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ps_background_gradient"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PsCard"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Back Button Row -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <ImageButton
                            android:id="@+id/btn_back_missions"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="Back"
                            android:src="@drawable/ic_back_arrow"
                            android:background="@drawable/ps_icon_button_bg"
                            android:tint="@color/ps_text_primary"
                            android:padding="10dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Missions"
                        style="@style/PsSectionTitleText"
                        android:textSize="32sp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:textAlignment="center" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Track your quests and achievements"
                        style="@style/PsBodyText"
                        android:textSize="16sp"
                        android:textColor="@color/ps_text_secondary"
                        android:letterSpacing="0.01"
                        android:gravity="center"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Options Grid -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <!-- Quests Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/PsCard"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/card_quests">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Icon Container -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="16dp"
                            app:cardBackgroundColor="@color/ps_primary_blue"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_quests"
                                android:tint="@color/ps_text_primary"
                                android:padding="16dp"
                                android:scaleType="fitCenter" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Text Content -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quests"
                                android:textColor="@color/ps_text_primary"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.01"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complete objectives and earn rewards"
                                android:textColor="@color/ps_text_secondary"
                                android:textSize="14sp"
                                android:lineSpacingMultiplier="1.3" />
                        </LinearLayout>

                        <!-- Arrow Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:tint="@color/ps_text_secondary"
                            android:rotation="90"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Achievements Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/PsCard"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/card_achievements">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Icon Container -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="16dp"
                            app:cardBackgroundColor="@color/ps_accent"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_achievements"
                                android:tint="@color/ps_background"
                                android:padding="16dp"
                                android:scaleType="fitCenter" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Text Content -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Achievements"
                                android:textColor="@color/ps_text_primary"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.01"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unlock milestones and showcase your progress"
                                android:textColor="@color/ps_text_secondary"
                                android:textSize="14sp"
                                android:lineSpacingMultiplier="1.3" />
                        </LinearLayout>

                        <!-- Arrow Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:tint="@color/ps_text_secondary"
                            android:rotation="90"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/ps_card_bottom_rounded"
        android:elevation="12dp"
        style="@style/PsBottomNav"
        app:itemIconTint="@drawable/ps_bottom_nav_selector"
        app:itemTextColor="@drawable/ps_bottom_nav_selector"
        app:itemRippleColor="@color/ps_accent"
        app:menu="@menu/map_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="24dp"
        app:itemTextAppearanceActive="@style/PsBottomNavTextActive"
        app:itemTextAppearanceInactive="@style/PsBottomNavTextInactive" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
