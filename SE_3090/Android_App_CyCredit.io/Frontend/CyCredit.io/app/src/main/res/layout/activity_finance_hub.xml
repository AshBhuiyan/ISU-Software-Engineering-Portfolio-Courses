<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ps_background_gradient">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingBottom="100dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Header Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/PsCard"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/financeTitle"
                            android:text="Finance Hub (Beardshear)"
                            style="@style/PsSectionTitleText"
                            android:textSize="24sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp" />

                        <!-- Stats Row -->
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:text="Balance"
                                    style="@style/PsCaptionText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/balanceText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textColor="@color/ps_text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:text="Monthly Spend"
                                    style="@style/PsCaptionText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/monthlySpendText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textColor="@color/ps_text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:text="Credit Limit"
                                    style="@style/PsCaptionText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/creditLimitText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textColor="@color/ps_text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Current Statement Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/statementCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/PsCard"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Statement"
                            style="@style/PsSectionTitleText"
                            android:textSize="20sp"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Due:"
                                style="@style/PsBodyText" />
                            <TextView
                                android:id="@+id/statementTotalDue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="@color/ps_text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Minimum Due:"
                                style="@style/PsBodyText" />
                            <TextView
                                android:id="@+id/statementMinDue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="@color/ps_text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/statementStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: OPEN"
                            style="@style/PsCaptionText"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Amount:"
                            style="@style/PsBodyText"
                            android:layout_marginBottom="4dp" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            style="@style/PsInput"
                            android:hint="Enter amount">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/paymentAmountInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="@color/ps_text_primary"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/payMinimumBtn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                android:text="Pay Minimum"
                                style="@style/PsSecondaryButton" />
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/payFullBtn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:text="Pay Full"
                                style="@style/PsSecondaryButton" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/payCustomBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pay Custom Amount"
                            style="@style/PsPrimaryButton" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/PsCard"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/goToStoreBtn"
                            android:text="Go to Memorial Union Store"
                            style="@style/PsPrimaryButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/backToMapBtn"
                            android:text="Back to Campus Map"
                            style="@style/PsSecondaryButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Transactions Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Recent Transactions"
                    style="@style/PsSectionTitleText"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/txRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/ps_accent"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/ps_card_bottom_rounded"
        android:elevation="12dp"
        style="@style/PsBottomNav"
        app:itemIconTint="@drawable/ps_bottom_nav_selector"
        app:itemTextColor="@drawable/ps_bottom_nav_selector"
        app:itemRippleColor="@color/ps_accent"
        app:menu="@menu/map_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="24dp"
        app:itemTextAppearanceActive="@style/PsBottomNavTextActive"
        app:itemTextAppearanceInactive="@style/PsBottomNavTextInactive" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
