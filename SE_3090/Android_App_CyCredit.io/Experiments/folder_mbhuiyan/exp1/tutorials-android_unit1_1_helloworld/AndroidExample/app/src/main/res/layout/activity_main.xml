<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Scrollable feature so long messages never run off-screen -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/main_msg_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#111111"
            android:textSize="28sp"
            android:textStyle="bold"
            android:lineSpacingExtra="6dp"
            android:padding="8dp" />
    </ScrollView>

    <!-- Primary actions shown at start -->
    <Button
        android:id="@+id/change_name_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change name"
        android:layout_marginTop="12dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/choose_role_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose role"
        android:enabled="false"
        android:layout_marginTop="8dp"
        android:padding="16dp" />

    <!-- Exit button, hidden initially, colored red with white text -->
    <Button
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>
